FROM golang:1.23-alpine AS builder

WORKDIR /app

# Copy go mod files
COPY go.mod go.sum ./
RUN go mod download

# Copy source code
COPY cmd/loadtest/ ./cmd/loadtest/

# Build the load test binary
RUN go build -o loadtest ./cmd/loadtest/

FROM alpine:latest

RUN apk --no-cache add ca-certificates

WORKDIR /root/

# Copy the binary from builder stage
COPY --from=builder /app/loadtest .

ENTRYPOINT ["./loadtest"]